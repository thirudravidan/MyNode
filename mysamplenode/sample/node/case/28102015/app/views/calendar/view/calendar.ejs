<div role="main" ng-controller="CalendarController" ng-init="loadEvents();">
    <div class="">
        <section id="directives-calendar" >
            <div class="page-header">
                <h1>Calendar</h1>
            </div>
            <div class="well">
                <div class="row-fluid"> 
                    <div class="span8">
                        <tabset>
                            <tab select="renderCalender('myCalendar1');">
                               
                              <div class="btn-toolbar"> 
                                <div class="btn-group">
                                    <button class="btn btn-success" ng-click="changeView('agendaDay', 'myCalendar1')">AgendaDay</button>
                                    <button class="btn btn-success" ng-click="changeView('agendaWeek', 'myCalendar1')">AgendaWeek</button>
                                    <button class="btn btn-success" ng-click="changeView('month', 'myCalendar1')">Month</button>
                                </div>
                              </div>
                            <div class="calendar" ng-model="eventSources" calendar="myCalendar1" ui-calendar="uiConfig.calendar"></div>
                           </tab>
                           
                        </tabset>
                    </div>
                </div>
            </div>
          
        </section>
    </div>

    <!--For Calendar Modal-->
    <div class="modal fade" id="showCallbackModel" tabindex="-1" role="dialog" aria-labelledby="updateLogLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="width:750px;">
                <div class="modal-header bg-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <span class="glyphicon glyphicon-user"></span>View Calendar 
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" role="form">
                        <div>
                            <div class="form-group"> 
                                <div class="col-sm-5">
                                    {{title}} {{startdate}}
                                </div>
                            </div>
                             
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</div>
