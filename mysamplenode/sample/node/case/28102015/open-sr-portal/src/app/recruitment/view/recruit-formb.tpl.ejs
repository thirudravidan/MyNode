<section class="content-header"><h1>Recruitment Form B</h1></section>
<section class="content" id="clientRecruit">
    <div class="box box-default boxdefault" ng-init="loadRecruitment('getRecuritementFormb','All');"> 
        <div class="box-body" id="accordion">
            <div class="panel">
                <div class="row collapse" id="createClient">                
                    <form id="recuritmentformb" name="recuritmentformb" class="form-box ui-formwizard" novalidate>
                        <div id="header" class="col-sm-12 col-md-12 col-lg-12">
                            <div class="col-md-6"><h4> Recruitment Client </h4></div>
                        </div>
                        <div class="col-md-12">
                            <ul class="timeline">
                                <li class="time-label">
                                    <span class="bg-red">
                                       {{details.fname}} {{detail.lname}}
                                    </span>
                                </li>
                                <li>
                                    <i class="fa fa-user bg-blue"></i>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header"><a href="javascript://">Phone</a><br>
                                        <span class="values"> {{details.ph1}}</span></h3>
                                        <h3 class="timeline-header"><a href="javascript://">Exp/Fresher</a><br>
                                        <span class="values"> {{details.totExp}} </span></h3>
                                        <h3 class="timeline-header"><a href="javascript://">Project</a><br>
                                        <span class="values"> {{details.project_name}} </span></h3>
                                        <h3 class="timeline-header"><a href="javascript://">Designation</a><br>
                                        <span class="values"> {{details.designation}} </span></h3>
                                        <h3 class="timeline-header"><a href="javascript://"> DoJ</a><br>
                                        <span class="values"> {{details.doj | date:'dd/MM/yyyy'}} </span></h3>
                                        <h3 class="timeline-header"><a href="javascript://">Location</a><br>
                                        <span class="values"> {{details.location_name}} </span></h3>
                                        <h3 class="timeline-header"><a href="javascript://">Transport Required</a><br>
                                        <span class="values"> {{(details.required_transport === 0) ? 'No' :'Yes'}} </span></h3>
                                        <h3 class="timeline-header"><a href="javascript://">Entity</a><br>
                                        <span class="values"> {{details.division_name}} </span></h3>
                                         <div style="clear:both"></div>
                                    </div>
                                </li>
                                <li>
                                    <i class="fa fa-user bg-yellow"></i>
                                    <div class="timeline-item">
                                        <div class="col-md-4">
                                            <div class="form-group" show-errors>
                                                <label>Employee ID</label>
                                                <input type="text" class="form-control" placeholder="Enter ..." id="empId" name="empId" ng-model="frmData.emp_id" required>
                                            </div><!-- /.form-group -->                  
                                        </div><!-- /.col -->
                                        <div class="col-md-4">
                                            <div class="form-group" show-errors>
                                                <label>Employee Email</label>
                                                <input type="text" class="form-control" placeholder="Enter ..." id="email" name="email" ng-model="frmData.work_email_id" required>
                                            </div><!-- /.form-group -->                  
                                        </div><!-- /.col -->                                             
                                        <div style="clear:both"></div>
                                    </div>
                                </li>
                            </ul>   
                        </div>
                        <div class="box-footer">
                            <div class="btn-group">
                                <button class="btn btn-block btn-default save_but" type="submit" ng-click="createRtformb()" data-toggle="collapse" data-target="#createRecruitment" data-parent="#accordion">
                                <i class="fa fa-check position_left"></i> Save</button>
                            </div>
                            <div class="btn-group">
                                <button class="btn btn-block btn-default cancel_but" type="submit" ng-click="clearfrm()" data-toggle="collapse" data-target="#clientList" data-parent="#accordion"><i class="fa fa-times position_left"></i> Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div> 
            <div class="panel">
                <div class="row collapse in" id="clientList">
                    <div class="row">
                        <div class="col-md-12 mar_bottom">
                            <div class="col-md-5 pull-right"> 
                                <div class="input-group">
                                    <input class="form-control input-sm pull-right ng-pristine ng-untouched ng-valid" type="text" name="table_search" placeholder="Search" ng-model="searchkey">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-default" ng-click="doSearch();" type="submit">
                                        <i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="box box-primary">           
                            <div class="box-body client-overflow">
                                <table ng-table="tableParams" show-filter="false" class="table table-bordered table-striped">
                                    <tr ng-repeat="userDet in $data track by $index">
                                        <td data-title="'First Name'" header-class="text-left" sortable="'fname'">
                                            {{userDet.fname}}
                                        </td>
                                        <td data-title="'Last Name'" header-class="text-left" sortable="'lname'">
                                            {{userDet.lname}}
                                        </td>
                                        <td data-title="'Contact'" header-class="text-left" sortable="'ph1'">
                                            {{userDet.ph1}}
                                        </td>
                                        <td data-title="'Exp/Fresher'" header-class="text-left" sortable="'totExp'">
                                            {{userDet.totExp}} Months
                                        </td>
                                        <td data-title="'Project'" header-class="text-left" sortable="'project_name'">
                                            {{userDet.project_name}}
                                        </td>
                                        <td data-title="'Designation'" header-class="text-left" sortable="'designation'">
                                            {{userDet.designation}}
                                        </td>
                                        <td data-title="'DoJ'" header-class="text-left" sortable="'doj'">
                                            {{userDet.doj | date : 'dd/MM/yyyy'}}
                                        </td>
                                        <td data-title="'Location'" header-class="text-left" sortable="'location_name'">
                                            {{userDet.location_name}}
                                        </td>
                                        <td data-title="'Transport'" header-class="text-left" sortable="'required_transport'">
                                            {{(userDet.required_transport === 0) ? 'No' :'Yes'}}
                                        </td>
                                        <td data-title="'Entity'" header-class="text-left" sortable="'division_name'">
                                            {{userDet.division_name}}
                                        </td>
                                        <td data-title="'Action'" ng-if="!isEditButtonEnabled">
                                            <a href="javascript://" data-toggle="collapse" data-target="#createClient" data-parent="#accordion" ng-click="editRecruit(userDet);" class="fa fa-pencil-square-o"></a>
                                        </td> 
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
