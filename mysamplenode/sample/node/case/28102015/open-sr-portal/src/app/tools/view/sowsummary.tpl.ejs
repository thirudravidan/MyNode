<section class="content-header">
          <h1>
                 Sow Summary
          </h1>          
</section>
<section class="content">
<div class="box box-default boxdefault" ng-init="Datainit('getsowUnit')">    
  <div class="box-body" id="accordion">
      <div class="panel">
        <div class="row collapse" id="createUser">       
            <div class="box-header"> </div>
              <div class="row modal-dialog">
               <div class="col-md-12">
                <div class="col-md-12 asses-overflow">
                  <div class="form-group">
                    <label>SLA*</label>
                    <input type="text" class="form-control" placeholder="Enter ..." id="sowsummarysla" name="sowsummarysla" ng-model="frmData.sowsummarysla">
                  </div><!-- /.form-group -->                  
                </div><!-- /.col -->
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Parameter*</label>
                    <input type="text" class="form-control" placeholder="Enter ..."  id="sowsummaryparameter" name="sowsummaryparameter" ng-model="frmData.sowsummaryparameter">
                  </div><!-- /.form-group -->                  
                </div><!-- /.col -->
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Matrix*</label>
                    <input type="text" class="form-control" placeholder="Enter ..." id="sowsummarymatrix" name="sowsummarymatrix" ng-model="frmData.sowsummarymatrix">
                  </div><!-- /.form-group -->                  
                </div><!-- /.col -->
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Description*</label>
                    <textarea class="form-control" rows="3" placeholder="Enter ..."  id="sowsummarydescription" name="sowsummarydescription" ng-model="frmData.sowsummarydescription"></textarea>
                  </div><!-- /.form-group -->                  
                </div><!-- /.col -->                               
                </div> 
                
              </div><!-- /.row -->
     
             <div class="box-footer">                          
                                  <div class="btn-group">
                                <button class="btn btn-block btn-default save_but" type="submit" data-toggle="collapse" data-target="#userList" data-parent="#accordion" ng-click="createSow(frmData)">
                                <i class="fa fa-check position_left"></i> Save
                                </button>
                              </div>
                              <div class="btn-group">
                                <button class="btn btn-block btn-default cancel_but" type="submit" ng-click="clearfrm()" data-toggle="collapse" data-target="#userList" data-parent="#accordion">
                                <i class="fa fa-times position_left"></i> Cancel
                                </button>
                              </div> 
                             
                </div><!-- /.box-footer -->
                </div>
                </div>
           <div class="panel">
            <div class="row collapse in" id="userList">
              <div id="header" class="col-sm-12 col-md-12 col-lg-12">
                <div class="col-md-6">
                  <h4> Sow List </h4>
                </div>
                <div class="col-md-6">
                  <label ng-hide="isAddButtonEnabled" class="btn btn-success pull-right" data-toggle="collapse" data-target="#createUser" data-parent="#accordion"> Add </label>
                </div>
              </div>
           <div class="col-md-12">         
                <div class="col-md-12">
                  <table ng-table="tableParams" show-filter="false" class="table table-bordered table-striped box box-success">
                    <tr ng-repeat="summaryDet in $data track by $index">
                      <td data-title="'SLA'" header-class="text-left" sortable="'sla'">
                        {{summaryDet.sla}}
                      </td>
                       <td data-title="'Parameter'" header-class="text-left" sortable="'parameter'">
                        {{summaryDet.parameter}}
                      </td>
                       <td data-title="'Matrix'" header-class="text-left" sortable="'matrix'">
                        {{summaryDet.matrix}}
                      </td>
                      <td data-title="'Description'" header-class="text-left" sortable="'desc'">
                        {{summaryDet.desc}}
                      </td>
                     
                      <td data-title="'Action'" ng-if="!isEditButtonEnabled" >
                    <a href="javascript://" ng-click="editUnit(summaryDet)" class="fa fa-pencil-square-o" data-toggle="collapse" data-target="#createUser" data-parent="#accordion"></a>
                    </td>
                    </tr>
                  </table>
                </div>     
                </div>
                </div>
                </div>
           </div>
          </div><!-- /.box -->
</section>
