<section class="content-header"><h1>Recruitment Form A</h1></section>
<section class="content" id="clientRecruit">
    <div class="box box-default boxdefault asses-overflow" ng-init="Datainit('getRecruitement','i');loadDefault()"> 
        <div class="box-body pad-rght30" id="accordion">
            <div class="panel">
                <div class="row collapse" id="createResource">
                    <div id="header" class="col-sm-12 col-md-12 col-lg-12">
                        <!-- <div class="col-md-6"><h4> Recruitment Form A </h4></div> -->
                    </div>
                    <form id="recuritFormA" name="recuritFormA" class="form-box ui-formwizard" novalidate>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="box box-info">           
                                        <div class="box-header"> 
                                            <h3 class="box-title">Basic Info</h3>           
                                        </div>
                                        <div class="box-body">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>First Name</label>
                                                    <input type="text" class="form-control" placeholder="Enter ..."  id-"rtfirstname" name="rtfirstname" disabled="" ng-model="frmData.fname">
                                                </div><!-- /.form-group -->
                                            </div><!-- /.col -->
                                            <div class="col-md-4" >
                                                <div class="form-group">
                                                    <label>Last Name</label>
                                                    <input type="text" class="form-control" disabled="" placeholder="Enter ..." id-"rtlastname" name="rtlastname" ng-model="frmData.lname">
                                                </div><!-- /.form-group -->
                                            </div><!-- /.col -->
                                            <div class="col-md-4" >
                                                <div class="form-group">
                                                    <label>Phone:</label>
                                                    <div class="input-group">
                                                        <div class="input-group-addon"><i class="fa fa-phone"></i></div>
                                                        <input class="form-control" disabled="" type="text" data-mask=" data-inputmask=""mask": "(999) 999-9999" id-"rtphone" name="rtphone" ng-model="frmData.ph1">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4" >
                                                <div class="form-group">
                                                    <label>Experience</label>
                                                    <div class="col-md-12">               
                                                        <input type="radio" checked="" value="0" ng-model="frmData.exp">
                                                        Fresher
                                                        <input type="radio" unchecked="" value="1" ng-model="frmData.exp"> 
                                                        Experienced    
                                                    </div>
                                                </div><!-- /.form-group -->
                                            </div><!-- /.col -->
                                            <div class="col-md-4" >
                                                <div class="form-group">
                                                    <label>Experience in Months</label>
                                                    <input type="number" class="form-control" disabled="" ng-model="frmData.totExp">
                                                </div><!-- /.form-group -->
                                            </div><!-- /.col -->
                                        </div>
                                    </div>
                                </div>
                            </div>  
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="box box-info">
                                        <div class="box-header">
                                            <h3 class="box-title">Company Info</h3>
                                        </div>
                                        <div class="box-body">
                                            <div class="col-md-4" >
                                                <div class="form-group" show-errors>
                                                    <label>Project</label>
                                                    <select class="form-control" id="recruitmentformaproject" name="rtproject" ng-model="frmData.rtproject" ng-options="proDet.project_id_pk as proDet.project_name for proDet in projectDetails" required>
                                                        <option value="">Select</option>
                                                    </select>
                                                </div><!-- /.form-group -->                  
                                            </div><!-- /.col -->
                                            <div class="col-md-4" >
                                                <div class="form-group">
                                                    <label>Designation</label>
                                                    <input type="text" class="form-control" placeholder="Enter ..." id="rtdesignation" name="rtdesignation" ng-model="frmData.rtdesignation">
                                                </div><!-- /.form-group -->                  
                                            </div><!-- /.col -->
                                            <div class="col-md-4" >
                                                <div class="form-group">
                                                    <label>Salary</label>
                                                    <input type="text" class="form-control" placeholder="Enter ..." id="rtsalary" name="rtsalary" ng-model="frmData.rtsalary">
                                                </div><!-- /.form-group -->                  
                                            </div><!-- /.col -->
                                            <div class="col-md-4" >
                                                <div class="form-group">
                                                    <label>Date of Joining</label>
                                                    <div class="input-group">
                                                        <div class="input-group-addon"><i class="fa fa-calendar-o"></i></div>
                                                        <input type="text" class="form-control pull-right dtpicker" data-mask="" id="rtdoj" name="rtdoj" ng-model="frmData.rtdoj">
                                                    </div><!-- /.input group -->
                                                </div><!-- /.form-group -->                  
                                            </div><!-- /.col -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="box box-info">
                                        <div class="box-header">
                                            <h3 class="box-title">Location</h3>
                                        </div>
                                        <div class="box-body">
                                                <div class="col-md-4">
                                                    <div class="form-group" show-errors>
                                                        <label>Work Location</label>
                                                        <select class="form-control" id="rtworklocation"  name="rtworklocation" ng-model="frmData.rtworklocation" ng-options="locDet.location_id_pk as locDet.location_name for locDet in locationDetails" required>
                                                            <option value="">Select</option>>
                                                        </select>
                                                    </div><!-- /.form-group -->                  
                                                </div><!-- /.col -->

                                                <div class="col-md-4" >
                                                    <div class="form-group">
                                                        <label>Transport</label>
                                                        <select class="form-control"  id="rtworktransport"  name="rtworktransport" ng-model="frmData.rtworktransport">
                                                            <option value="">Select</option>
                                                            <option>Yes</option>
                                                            <option>No</option>
                                                        </select>
                                                    </div><!-- /.form-group -->                  
                                                </div><!-- /.col -->

                                                <div class="col-md-4" >
                                                    <div class="form-group" show-errors>
                                                        <label>Division</label>
                                                        <select class="form-control" id="rtworkdivision"  name="rtworkdivision" ng-model="frmData.rtworkdivision" ng-options="divDet.division_id_pk as divDet.division_name for divDet in divisionDetails" required>
                                                            <option value="">Select</option>
                                                        </select>
                                                    </div><!-- /.form-group -->                  
                                                </div><!-- /.col -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="box box-info">
                                        <div class="box-header">
                                            <h3 class="box-title">Client Panel</h3>
                                        </div>
                                        <div class="box-body">
                                                <div class="col-md-4" >
                                                    <div class="form-group">
                                                        <label>Client Interview</label>
                                                        <select class="form-control" id="rtclientinterview"  name="rtclientinterview" ng-model="frmData.rtclientinterview" ng-change="clientSchedule(frmData.rtclientinterview)">
                                                            <option value="">Select</option>
                                                            <option value="1">Yes</option>
                                                            <option value="0">No</option>
                                                        </select>
                                                    </div><!-- /.form-group -->                  
                                                </div><!-- /.col -->

                                                <div class="col-md-4" >
                                                    <div class="form-group">
                                                        <label>Client Interview Date</label>
                                                        <input ng-disabled="frmData.iDateFlag" type="text" class="form-control dtpicker" placeholder="Enter ..." id="rtclientinterviewdate" name="rtclientinterviewdate" ng-model="frmData.rtclientinterviewdate">
                                                    </div><!-- /.form-group -->
                                                </div><!-- /.col -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer">
                                <div class="btn-group">
                                    <button class="btn btn-block btn-default save_but" type="submit" ng-click="createRtforma(frmData)">
                                    <i class="fa fa-check position_left"></i> Save</button>
                                </div>
                                <div class="btn-group">
                                    <button class="btn btn-block btn-default cancel_but  flipup" type="submit" ng-click="clearfrm()" data-toggle="collapse" data-target="#clientList" data-parent="#accordion"><i class="fa fa-times position_left" ng-click="clearfrm()"></i> Cancel</button>
                                </div>
                            </div>
                        </div>
                    </form>           
                </div>
            </div> 
            <div class="panel">
                <div class="row collapse in" id="clientList">
                    <div class="col-md-12 mar_bottom" style="display:none">
                        <h4> Search </h4>
                        <div class="box box-primary">           
                            <div class="box-body">
                                <form name="frmssearch">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Month </label>
                                                <input type="text" class="form-control" placeholder="" id="resource_first_name" name="resource_first_name" ng-model="frmsearch.resource_first_name">
                                            </div><!-- /.form-group -->                  
                                        </div><!-- /.col -->
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Year </label>
                                                <input type="text" class="form-control" placeholder="" id="resource_email" name="resource_email" ng-model="frmsearch.resource_email">
                                            </div><!-- /.form-group -->                  
                                        </div><!-- /.col -->
                                        <div class="col-md-3">
                                            <div class="btn-group">
                                                <label>&nbsp;</label>
                                                <button data-toggle="dropdown" class="btn btn-block btn-default save_but" type="submit" ng-click="Datainit('getRecruitement','s');"> <i class="fa fa-search position_left"></i> Search </button>
                                            </div><!-- /.form-group -->                  
                                        </div><!-- /.col -->
                                    </div><!-- /.row -->                  
                                </div><!-- /.col -->  
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 mar_bottom" style="display:none">
                        <div class="col-md-5 pull-right"> 
                            <div class="input-group">
                                <input class="form-control input-sm pull-right ng-pristine ng-untouched ng-valid" type="text" name="table_search" placeholder="Search" ng-model="searchtxt">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-default" type="submit">
                                    <i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="box box-primary">           
                            <div class="box-body">
                                <table ng-table="tableParams" show-filter="false" class="table table-bordered table-striped">
                                    <tbody>
                                        <tr ng-repeat="userDet in $data">
                                            <td data-title="'First Name'" header-class="text-left" sortable="'resource_first_name'">
                                                {{userDet.resource_first_name}}
                                            </td>
                                            <td data-title="'Email'" header-class="text-left" sortable="'resource_email'">
                                                {{userDet.resource_email}}
                                            </td>
                                            <td data-title="'Interview Date'" header-class="text-left" sortable="'resource_interview_date'">
                                                {{userDet.resource_interview_date}}
                                            </td>
                                            <td data-title="'Selection Status'" header-class="text-left" ng-switch="userDet.interview_status" data-title="'Status'" header-class="text-left" sortable="'status'">
                                                <span ng-hide="isEditButtonEnabled" editable-select="userDet.interview_status" e-name="interview_status" e-ng-options="s.value as s.text for s in statuses" onbeforesave="chgRecStatus($data,userDet.resource_details_id_pk,$index)">
                                                    <span ng-switch-when="0" class="label label-warning">Pending</span>
                                                    <span ng-switch-when="1" class="label label-danger">Not Selected</span>
                                                    <span ng-switch-when="2" class="label label-success">Selected</span>
                                                </span>
                                                <span ng-show="isEditButtonEnabled">
                                                    <span ng-switch-when="0" class="label label-warning">Pending</span>
                                                    <span ng-switch-when="1" class="label label-danger">Not Selected</span>
                                                    <span ng-switch-when="2" class="label label-success">Selected</span>
                                                </span>
                                            </td>
                                            <td data-title="'Action'" ng-if="!isEditButtonEnabled">
                                                <a href="javascript://" ng-show="(userDet.interview_status == 2)"  data-toggle="collapse" data-target="#createResource" data-parent="#accordion" ng-click="DataRecSel('getUserDet', userDet.resource_details_id_pk);" class="fa fa-pencil-square-o"></a>
                                            </td> 
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
