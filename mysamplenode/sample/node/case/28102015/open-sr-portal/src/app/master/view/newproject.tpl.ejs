<section class="content-header">
          <h1>
             Launch new project
          </h1>          
</section>
<section class="content">
<div class="box box-default boxdefault" ng-init="Datainit('getprojectUnit');loadClient();loadDevisions();loadLocations();loadTemplates();loadBUMas();loadTimeZones();">
            <div class="box-body newproj-overflow" id="accordion">
              <div class="panel">
                <div class="collapse" id="createUser">
                <form id="launchnewproj" name="launchnewproj" class="form-box ui-formwizard" novalidate>
              <div class="row">
               <div class="col-md-12">
             
                <div class="col-md-6 mar_bottom form-group" show-errors>
                 
                  <label>Client Name</label>
                  <select name="iupdate" ng-disabled="iupdate" ng-model="frmData.seleClient" id="drpClient" class="form-control" ng-options="clientDet.ClientID as clientDet.ClientName for clientDet in ClientDetails" required>
                    <option value="">Select</option>
                  </select>
                                   
                </div><!-- /.col -->
                <div class="col-md-6 mar_bottom form-group" show-errors>
             
                    <label>Project Name</label>
                    <input type="text" class="form-control" placeholder="Enter ..." id="newprojectclientname" name="newprojectclientname" ng-model="frmData.newprojectclientname" required>
                              
                </div><!-- /.col -->
                <div class="col-md-6 mar_bottom form-group" show-errors>
      
                    <label>Project Description</label>
                    <input type="text" class="form-control" placeholder="Enter ..." id="newprojectprojectdescription" name="newprojectprojectdescription" ng-model="frmData.newprojectprojectdescription" required>
                             
                </div><!-- /.col -->
                <div class="col-md-6 mar_bottom form-group" show-errors>
         
                      <label>Division</label>
                       <select  ng-disabled="iupdate" name="projectDevision" ng-model="frmData.seleDevision" id="drpDevision" class="form-control" ng-options="devisionDet.DevisionID as devisionDet.DevisionName for devisionDet in DevisionDetails" required>
                    <option value="">Select</option>
                  </select>
                          
                </div><!-- /.col -->
                <div class="col-md-6 mar_bottom form-group" show-errors>
      
                      <label>Location</label>
                      <select name="projectLoc"  ng-disabled="iupdate" ng-model="frmData.seleLocation" id="drpLoc" class="form-control" ng-options="locDet.LocationID as locDet.LocationName for locDet in LocationDetails" required>
                    <option value="">Select</option>
                  </select>
                   
                </div><!-- /.col -->
                <div class="col-md-6 mar_bottom form-group" show-errors>
      
                      <label>Line of Business</label>
                          <select class="form-control" id="prolob"  name="prolob" ng-model="frmData.prolob" required>
                            <option value="">--Select--</option>
                            <option value="1">Technical Support(TS)</option>
                            <option value="2">Customer Support(CS)</option>
                        </select>
                </div><!-- /.col -->
                 <div class="col-md-6 mar_bottom form-group" show-errors>      
                    <label>Project TimeZone</label>
                    <select name="selePrjTimeZ" ng-model="frmData.selePrjTimeZ" id="drpProTimeZ" class="form-control" ng-options="prjTime.timezone_id_pk as prjTime.country_name for prjTime in TimeZoneDetails" required>
                    <option value="">Select</option>
                  </select>                   
                </div><!-- /.col -->
                <div class="col-md-6 mar_bottom form-group" show-errors>
                  <label>Go Live TimeZone</label>
                      <select class="form-control" id="drpGoliveTimeZ"  name="seleGoliveTimeZ" ng-model="frmData.seleGoliveTimeZ" ng-options="prjTime.timezone_id_pk as prjTime.country_name for prjTime in TimeZoneDetails" required>
                      <option value="">Select</option>                            
                    </select>
                </div><!-- /.col -->
                <div class="col-md-6 mar_bottom form-group" show-errors>            
                  <label>Start Date:</label>
                  <div class="input-group">
                    <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                    </div>
                    <input calendar class="form-control" ng-disabled="iupdate" type="text" data-mask="" data-inputmask="'alias': 'dd/mm/yyyy'" id="newprojectstartdate" name="newprojectstartdate" ng-model="frmData.newprojectstartdate" required>
                  </div>                            
                </div><!-- /.col -->

               
                <div class="col-md-6 mar_bottom form-group" show-errors>

                  <label>Go Live on:</label>
                  <div class="input-group">
                  <div class="input-group-addon">
                  <i class="fa fa-calendar"></i>
                  </div>
                  <input calendar ng-disabled="iupdate" class="form-control" type="text" data-mask="" id="newprojectgolivedate" name="newprojectgolivedate" ng-model="frmData.newprojectgolivedate" required>

                  </div>
               
                               
                </div> 
                 
                 <div class="col-md-6 mar_bottom form-group" show-errors>
                      <label>Business Unit</label>
                        <select  class="form-control" placeholder="Business Unit" id="businessunit" name="businessunit" ng-model="frmData.businessunit" ng-options="buDet.bu_id_pk as buDet.bu_name for buDet in proBuDetails" multiple required>
                      </select>
                </div><!-- /.col -->
                 <div class="col-md-6 mar_bottom mar_temp">
                      <input type="checkbox" ng-disabled="iupdate" id="chkTemp" ng-model="frmData.chkTemp" value="Load From Template">Load From Template</input>
                       <select ng-show="frmData.chkTemp" name="projectTemp" ng-model="frmData.seleTemplate" id="drpTemp" class="form-control" ng-options="tempDet.TempID as tempDet.TempName for tempDet in TemplateDetails">
                      <option value="">Select</option>
                  </select>
                </div><!-- /.col -->
                <div class="col-md-6 mar_bottom">
            
                  <label for="exampleInputFile">Logo</label>
                  <div class="overlay-layer"><i class="fa fa-cloud-upload"></i></div>
                        <input type="file" class="upload_btn" ng-model="profPic" ngf-select="uploadImg($file)" accept="image/*" ngf-max-height="1000" ngf-max-size="1MB">
                        <span ng-show="isInvalidFile">Invalid file format</span>
                  <p class="help-block">&nbsp;&nbsp;&nbsp;&nbsp;</p>
                               
                </div><!-- /.col -->
                
              </div><!-- /.row -->
            </div><!-- /.box-body -->
             <div class="box-footer pull-right">                          
                  <div class="btn-group">
                    <button class="btn btn-block btn-default save_but" type="button" ng-click="createNewproject()">
                    <i class="fa fa-check position_left"></i> Save
                    </button>
                  </div>
                  <div class="btn-group">
                    <button class="btn btn-block btn-default cancel_but" type="button" ng-click="clearfrm()" data-toggle="collapse" data-target="#userList" data-parent="#accordion">
                    <i class="fa fa-times position_left"></i> Cancel
                    </button>
                  </div>
                </div><!-- /.box-footer -->
</form>
</div>
</div>
<div class="panel">
        <div class="row collapse in" id="userList">
          <div class="col-sm-12 col-md-12 col-lg-12">
              <div class="col-md-6">
                <h4> Project List </h4>
              </div>
              <div class="col-md-6">
                <label ng-hide="isAddButtonEnabled" class="btn btn-success pull-right" id="showCreate" data-toggle="collapse" data-target="#createUser" data-parent="#accordion"> Add Project </label>
              </div>
            </div>
           <div class="col-md-12">         
                <div class="col-md-12">
                  <table ng-table="tableProject" show-filter="false" class="table table-bordered table-striped box box-success csat-scroll">
                    <tr ng-repeat="unitDet in $data track by $index">
                      <td data-title="'Client Name'" header-class="text-left" sortable="''">
                        {{unitDet.client_name}}
                      </td>
                       <td data-title="'Project Name'" header-class="text-left" sortable="'project_name'">
                        {{unitDet.project_name}}
                      </td>
                       <td data-title="'Project Description'" header-class="text-left" sortable="'project_desc'">
                        {{unitDet.project_desc}}
                      </td>
                      <td data-title="'Division'" header-class="text-left" sortable="''">
                         {{unitDet.division_name}}
                      </td>
                       <td data-title="'Location'" header-class="text-left" sortable="''">
                        {{unitDet.location_name}}
                      </td>
                        <td data-title="'Start Date'" header-class="text-left" sortable="'start_date'">
                        {{unitDet.start_date |  date:'yyyy-MM-dd'}}
                      </td>
                      <!--  <td data-title="'Template'" header-class="text-left" sortable="''">
                        {{unitDet.TempName}}
                      </td> -->
                       <td data-title="'Logo'" header-class="text-left" sortable="'logo_path'">
                        {{logo_path}}
                      </td>
                         <td data-title="'Go LIVE Date'" header-class="text-left" sortable="'go_live_date'">
                        {{unitDet.go_live_date |  date:'yyyy-MM-dd'}}
                      </td>
                      </td>
                         <td data-title="'LOB'" header-class="text-left" sortable="'LOBNAME'">
                        {{unitDet.LOBNAME}}
                      </td>
                      </td>
                         <td data-title="'Business Unit'" header-class="text-left" sortable="'BuNameBuName'">
                        {{unitDet.BuName}}
                      </td>
                    <td data-title="'Action'" ng-if="!isEditButtonEnabled">
                    <a href="javascript://" ng-click="editUnit(unitDet)" class="fa fa-pencil-square-o" data-toggle="collapse" data-target="#createUser" data-parent="#accordion"></a>
                    </td> 
                       
                    </tr>
                  </table>
                </div>               
                </div>
           </div>
          </div><!-- /.box -->
          </div>
</section>



