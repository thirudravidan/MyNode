<section class="content-header">
	<h1>Location</h1>          
</section>
<section class="content">
	<div id="locationPage" class="box box-default boxdefault" ng-init="test(); Datainit('getLocation','i')">           
		<div class="box-body">
			<div class="row">
				<div class="col-md-7">
					<h4> Location </h4>
					<div class="box box-primary">           
						<div class="box-body usercreate-form">
							<table ng-table="tableParams" show-filter="false" class="table table-bordered table-striped">
								<tr ng-repeat="locDet in $data track by $index">
									<td data-title="'Location'" header-class="text-left" sortable="'location_name'">
										{{locDet.location_name}}
									</td>
									<td data-title="'Remarks'" header-class="text-left" sortable="'location_desc'">
										{{locDet.location_desc}}
									</td>
									<td nowrap ng-switch="locDet.status" data-title="'Status'" header-class="text-left" sortable="'status'">
										<span ng-switch-when="0" style="color:#FF0000;">
											<button type="button" ng-hide="isEditButtonEnabled" class="btn btn-danger btn-xs" ng-click="chgLocStatus(locDet,locDet.status);"><i class="fa fa-lock fa-3"></i> Disabled</button>
											<span ng-show="isEditButtonEnabled" class="label label-danger"><i class="fa fa-lock fa-3"></i> Disabled</span>
										</span>
										<span ng-switch-when="1" style="color:#499849;">
											<button type="button" ng-hide="isEditButtonEnabled" class="btn btn-success btn-xs" ng-click="chgLocStatus(locDet,locDet.status);"><i class="fa fa-unlock fa-3"></i> Enabled</button>
											<span ng-show="isEditButtonEnabled" class="label label-success"><i class="fa fa-unlock fa-3"></i> Enabled</span>
										</span>
									</td>
									<td data-title="'Action'" ng-if="!isEditButtonEnabled">
										<a href="javascript://" ng-show="(locDet.status == 1)" ng-click="editLocation(locDet)" class="fa fa-pencil-square-o"></a>
									</td> 
								</tr>
							</table>
						</div>
					</div>
				</div>

				<div ng-hide="isShowDelivery" class="col-md-5" ng-init="initValiadate()">
					<h4> Add / Edit Location </h4>
					<div class="box box-success">           
						<div class="box-body">
							<form id="frmLocation" class="form-horizontal form-box ui-formwizard" name="frmLocation" novalidate >
								<div class="col-md-12">
									<div class="form-group" show-errors>
										<label>Location Name</label>
										<input type="text" class="form-control" placeholder="Enter ..." id="locationName" name="locationName" ng-model="frmData.locationName" required>
									</div><!-- /.form-group -->                  
								</div><!-- /.col -->
								<div class="col-md-12">
									<div class="form-group" show-errors>
										<label>Remarks</label>
										<input type="text" class="form-control" placeholder="Enter ..." id="remarks" name="remarks" ng-model="frmData.remarks" required>
									</div><!-- /.form-group -->                  
								</div><!-- /.col -->
								<div class="col-md-12">
									<div class="form-group">
										<label>Enable</label>
										<input type="checkbox" id="status" name="status" ng-model="frmData.status">
									</div><!-- /.form-group -->                  
								</div><!-- /.col -->
								<div class="box-footer pull-right">                          
									<div class="btn-group">
										<button class="btn btn-block btn-default save_but" type="submit" ng-click="createLocation()">
										<i class="fa fa-check position_left"></i> Save
										</button>
									</div>
									<div class="btn-group">
										<button class="btn btn-block btn-default cancel_but" type="button" ng-click="clearfrm()">
										<i class="fa fa-times position_left"></i> Cancel
										</button>
									</div>
								</div><!-- /.box-footer -->
							</form>
						</div>
					</div>
				</div>
			</div>
		</div><!-- /.box -->
    </div>
</section>