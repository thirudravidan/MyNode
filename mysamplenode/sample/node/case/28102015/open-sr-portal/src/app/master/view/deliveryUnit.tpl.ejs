<section class="content-header">
	<h1>Delivery Unit</h1>          
</section>
<section class="content">
	<div id="deliveryUnitPage" class="box box-default boxdefault" ng-init="Datainit('getUnit','i')">           
		<div class="box-body">
			<div class="row">
				<div class="col-md-7">
					<h4> Delivery Unit List </h4>
					<div class="box box-primary">           
						<div class="box-body deliveryunit-scroll">
							<table ng-table="tableParams" show-filter="false" class="table table-bordered table-striped">
								<tr ng-repeat="unitDet in $data track by $index">
									<td data-title="'Delivery Unit'" header-class="text-left" sortable="'dunit_name'">
										{{unitDet.dunit_name}}
									</td>
									<td data-title="'Remarks'" header-class="text-left" sortable="'dunit_desc'">
										{{unitDet.dunit_desc}}
									</td>
									<td nowrap ng-switch="unitDet.status" data-title="'Status'" header-class="text-left" sortable="'status'">
										<span ng-switch-when="0" style="color:#FF0000;">
											<button type="button" ng-hide="isEditButtonEnabled" class="btn btn-danger btn-xs" ng-click="chgUnitStatus(unitDet,unitDet.status);"><i class="fa fa-lock fa-3"></i> Disabled</button>
											<span ng-show="isEditButtonEnabled" class="label label-danger"><i class="fa fa-lock fa-3"></i> Disabled</span>
										</span>
										<span ng-switch-when="1" style="color:#499849;">
											<button type="button" ng-hide="isEditButtonEnabled" class="btn btn-success btn-xs" ng-click="chgUnitStatus(unitDet,unitDet.status);"><i class="fa fa-unlock fa-3"></i> Enabled</button>
											<span ng-show="isEditButtonEnabled" class="label label-success"><i class="fa fa-unlock fa-3"></i> Enabled</span>
										</span>
									</td>
									<td data-title="'Action'" ng-if="!isEditButtonEnabled" >
										<a href="javascript://" ng-show="(unitDet.status == 1)" ng-click="editUnit(unitDet)" class="fa fa-pencil-square-o"></a>
									</td> 
								</tr>
							</table>
						</div>
					</div>
				</div>

				<div ng-hide="isShowDelivery" class="col-md-5" ng-init="initValiadate()">
					<h4> Add / Edit Delivery Unit </h4>
					<div class="box box-success">           
						<div class="box-body">
							<form id="frmdeliveryunit" name="frmdeliveryunit" class="form-horizontal form-box ui-formwizard" novalidate>
								<div class="col-md-12">
									<div class="form-group" show-errors>
										<label>Unit Name</label>
										<input type="text" class="form-control" placeholder="Enter ..." id="unitName" name="unitName" ng-model="frmData.unitName" required>
									</div><!-- /.form-group -->                  
								</div><!-- /.col -->
								<div class="col-md-12">
									<div class="form-group" show-errors>
										<label>Remarks</label>
										<input type="text" class="form-control" placeholder="Enter ..." id="remarks" name="remarks" ng-model="frmData.remarks" required>
									</div><!-- /.form-group -->                  
								</div><!-- /.col -->
								<div class="col-md-12">
									<div class="form-group">
										<label>Status</label>
										<input type="checkbox" id="status" name="status" ng-model="frmData.status">
									</div><!-- /.form-group -->                  
								</div><!-- /.col -->
								<div class="box-footer pull-right">                          
									<div class="btn-group">
										<button  class="btn btn-block btn-default save_but" type="submit" ng-click="createDelivery()">
										<i class="fa fa-check position_left"></i> Save
										</button>
									</div>
									<div class="btn-group">
										<button class="btn btn-block btn-default cancel_but" type="submit" ng-click="clearfrm()">
										<i class="fa fa-times position_left"></i> Cancel
										</button>
									</div>
								</div><!-- /.box-footer -->
							</form>
						</div>
					</div>
				</div>
			</div>
		</div><!-- /.box -->
    </div>
</section>